{
  "name": "api",
  "version": "1.0.0",
  "description": "A simple API project",
  "main": "src/api/server.py",
  "scripts": {
    "dev:api": "PORT=3011 uv run src/api/server.py",
    "watch": "nodemon --watch src -e py,ts --exec \"bun test\"",
    "start": "uv run src/api/server.py",
    "migrate-production": "bun run migrate.mts",
    "migrate-local": "SSL=false LOCAL=true bun run migrate.mts",
    "generate": "bunx drizzle-kit generate",
    "drop": "bunx drizzle-kit drop",
    "test": "docker compose --env-file .env.test -f docker-compose.test.yml up --build --exit-code-from app --remove-orphans"
  },
  "dependencies": {
    "nodemon": "3.1.4",
    "drizzle-orm": "0.41.0",
    "drizzle-zod": "0.7.0",
    "zod": "3.23.6",
    "drizzle-kit": "0.30.6",
    "bun-types": "1.1.25",
    "dotenv": "16.4.7",
    "postgres": "3.4.3"
  },
  "devDependencies": {
  }
}